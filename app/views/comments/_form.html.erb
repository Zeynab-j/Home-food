<%= form_for [@post, @post.comments.build] do |f| %>
  <% if @post.errors.present? %>
  <ul>
    <% @post.errors.full_messages.each do |error|%>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <%= f.label :comment, "Your comment" %> <br>
  <%= f.text_area :comment %> <br>

  <%= f.submit %>
<% end %>
