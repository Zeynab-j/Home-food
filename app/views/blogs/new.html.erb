<div class="container">
  <h1 class="c-white">New Blog</h1>
  <div class="form-group">
   <%= form_for @blog, method: 'post'  do |f| %>
   <% if @blog.errors.present? %>
   <ul>
     <% @blog.errors.full_messages.each do |error|%>
       <li class = "text-danger"><%= error %></li>
     <% end %>
   </ul>
   <% end %>
    <%= f.label :category, class: "c-white" %> <br>
    <%= f.text_field :category, class: "form-control" %> <br>
  </div>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>
