<div class="container" >
  <h4 class="c-white">All Posts</h4>
  <%= link_to 'New Post' , new_post_path, class: "btn btn-primary btn-right" %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th class="c-white">Title</th>
        <th class="c-white">Content</th>
        <th class="c-white">Category</th>
        <th class="c-white">Author</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
            <tr>
             <td class="c-white"><%= link_to post.title, post_path(post.id), class: "c-white"%></td>
             <td class="c-white"><%= post.content%></td>

             <td class="c-white"><%= post.blog_id.present? ? post.blog.category : 'NA'  %></td>
             <td class="c-white"><%= post.user.try(:email)%></td>
           </tr>


          <% end %>
    </tbody>
  </table>
</div>
