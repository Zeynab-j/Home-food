

<%= form_for @post, multipart: true do |f| %>
<% if @post.errors.present? %>
  <ul>
  <% @post.errors.full_messages.each do |error|%>

    <li><%= error %></li>

  <% end %>
  </ul>
<% end %>

<%= f.label :blog_id, "Category" %> <br>
<%= f.select :blog_id, Blog.all.map{|blog| [blog.category, blog.id]} %> <br> <br>

<%= f.label :title %> <br>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content %> <br>
<%= f.text_area :content %>

<%= f.label :image %> <br>
<%= f.file_field :image %>

<%= f.submit "Edit A Post"%>

<% end %>
